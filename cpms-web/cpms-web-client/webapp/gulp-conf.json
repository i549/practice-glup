{
    "maps": {
        "pages": {
            "src": ["pages/**/*"],
            "target": "build"
        },

        "styles": {
            "src": ["styles/**/*", "!styles/**/*.mixins.less"],
            "target": "build/css"
        },

        "scripts": {
            "src": ["scripts/**/*"],
            "target": "build/js"
        },

        "images": {
            "src": ["images/**/*"],
            "target": "build/images"
        }
    },

    "modules": [{
        "src": [
            "node_modules/bootstrap/dist/css/bootstrap.*",
            "node_modules/bootstrap/dist/js/bootstrap.*"
        ],
        "target": "build/module/bootstrap"
    }, {
        "src": ["scripts/core/popper.js"],
        "target": "build"
    }]
}