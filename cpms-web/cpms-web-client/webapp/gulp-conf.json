{
    "maps": {
        "pages": {
            "src": ["pages/**/*"],
            "target": "build"
        },

        "styles": {
            "src": ["styles/**/*", "!styles/**/*.mixins.less"],
            "target": "build/css"
        },

        "scripts": {
            "src": ["scripts/**/*"],
            "target": "build/js"
        },

        "images": {
            "src": ["images/**/*"],
            "target": "build/images"
        }
    }
}